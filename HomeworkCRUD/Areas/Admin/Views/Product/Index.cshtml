
@{
    List<Product> products = Model;
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Categories</h4>

                    <div class="table-responsive">
                        <a class="btn btn-primary" asp-controller="Category" asp-action="AddProduct">Add new Product</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td class="w-25"><img src="~/img/product/@product.CoverImageUrl" class="w-25 h-25"/></td>
                                        <td>@product.Name</td>
                                        <td>
                                            <a asp-controller="Product" asp-area="" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info" target="_blank">Details</a>

                                            <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>

                                            <form method="post" asp-action="Delete" class="d-inline">
                                                <input value="@product.Id" name="id" type="hidden" />
                                                <button type="submit" class="btn btn-danger">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>